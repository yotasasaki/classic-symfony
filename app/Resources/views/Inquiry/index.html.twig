{% extends "layout.html.twig" %}

{% block title %}お問い合わせ{{ parent() }}{% endblock %}

{% block body %}
<section id="home" class="head-main-img">
    <div class="container">
        <div class="row text-center pad-row">
            <div class="col-md-10 col-md-offset-1">
                <h1><span class="back-light">お問い合わせ</span></h1>
            </div>
        </div>
    </div>
</section>

<section id="inquiry-sec">
    <div class="container">
        <div class="row pad-row">

            {# {{ form(form) }} #}{# 簡易フォームを使う場合 #}

            {{ form_start(form) }} {# フォームの開始タグを出力 #}
            <table class="table">
                <tr>
                    <th><i class="fa fa-circle"></i> お名前</th>
                    <td>
                    {# フォーム要素のウィジェットを、class属性を追加して出力 #}
                    {{ form_widget(form.name, {"attr": {"class":"form-control"}}) }}
                    {# フォームの要素エラーを出力 #}
                    {{ form_errors(form.name) }}
                    </td>
                </tr>
                <tr>
                    <th><i class="fa fa-circle"></i> メールアドレス</th>
                    <td>
                    {{ form_widget(form.email, {"attr": {"class":"form-control"}}) }}
                    {{ form_errors(form.email) }}
                    </td>
                </tr>
                <tr>
                    <th><i class="fa fa-circle-o"></i> 電話番号</th>
                    <td>
                    {{ form_widget(form.tel, {"attr": {"class":"form-control"}}) }}
                    {{ form_errors(form.tel) }}
                    </td>
                </tr>
                <tr>
                    <th><i class="fa fa-circle"></i> お問い合わせ種別</th>
                    <td>
                    {{ form_widget(form.type, {"attr": {"class":"form-control"}}) }}
                    {{ form_errors(form.type) }}
                    </td>
                </tr>
                <tr>
                    <th><i class="fa fa-circle"></i> お問い合わせ内容</th>
                    <td>
                    {{ form_widget(form.content, {"attr": {"class":"form-control"}}) }}
                    {{ form_errors(form.content) }}
                    </td>
                </tr>
            </table>
            <div class="text-center">
            {# フォームの送信ボタンを出力 #}
                {{ form_widget(form.submit, {"attr": {"class":"btn btn-primary"}}) }}
            </div>
            {{ form_end(form) }} {# フォームの閉じタグを出力 #}
        </div>
    </div>
 </section>
 {% endblock %}
